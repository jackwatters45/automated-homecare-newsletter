{
	"compilerOptions": {
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"outDir": "dist",
		"rootDir": "src",
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"target": "esnext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"sourceMap": true,
		"inlineSources": true,
		"allowSyntheticDefaultImports": true,
		"sourceRoot": "/",
		"noEmit": false
	},
	"include": ["src/**/*", "types/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
